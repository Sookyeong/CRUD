<div class="container" style="margin-top:100px;margin-bottom:100px">
  <form action="/write" method="POST">
      
    <div class="form-group">
      <label>Title</label>
      <input type="text" class="form-control" name="view_post_title" placeholder="제목을 입력하세요">
    </div>
    
    <div class="form-group">
      <label>Content</label>
      <textarea type="text" class="form-control" rows="5"name="view_post_content" placeholder="내용을 입력하세요"></textarea>
    </div>
    
    <button type="submit" class="btn btn-default btn-lg btn-block">Write</button>
  </form>

    
  <br/><br/>
  
  <table class="table table-hover">
    <thead>
       <tr>
            <th> # </th>
            <th> Title </th>
            <th> content </th>
            <th> Date </th>
            <th> Update </th>
            <th> Destroy </th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |p| %>
        <tr>
            <td> <%= p.id %> </td>
            <td> <%= p.post_title %> </td>
            <td> <%= p.post_content %> </td>
            <td> <%= p.created_at %> </td>
            <td><a href="/update/<%=p.id%>">[수정]</a></td>
            <td><a href="/destroy/<%=p.id%>">[삭제]</a></td>
        </tr>
        <tr>
              <td colspan="6">
                <div id="comment_<%= p.id %>">
                <% p.comments.each do |r| %>
                    <%= r.comment_content %>
                    <%= r.post_id %>
                <%end%>
            </div>
            
            <div class="form-group">
                <label>댓글</label>
                <input type="text" class="form-control" id="content_<%=p.id%>" name="view_comment_content" placeholder="댓글을 입력하세요">
            </div>
          
            <button value="<%=p.id%>" type="submit" class="btn btn-default comment_submit">댓글쓰기</button>
              </td>
            </tr>
      <%end%>
    </tbody>
  </table>
</div>