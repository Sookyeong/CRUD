<div class="container" style="margin-top:100px;margin-bottom:100px">
  <form action="/edit/<%=@post.id%>" method="POST">
      
    <div class="form-group">
      <label>Title</label>
      <input value="<%=@post.post_title%>" type="text" class="form-control" name="view_post_title" placeholder="제목을 입력하세요">
    </div>
    
    <div class="form-group">
      <label>Content</label>
      <textarea type="text" class="form-control" rows="5"name="view_post_content" placeholder="내용을 입력하세요">
          <%=@post.post_content%>
      </textarea>
    </div>
    
    <button type="submit" class="btn btn-default btn-lg btn-block">Write</button>
  </form>
</div>